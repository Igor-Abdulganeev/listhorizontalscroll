<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <com.example.gorinih.klibscroll.ScrollableList
        android:id="@+id/scrollableList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimens_8dp"
        android:layout_marginLeft="@dimen/dimens_8dp"
        android:layout_marginTop="@dimen/dimens_8dp"
        android:layout_marginEnd="@dimen/dimens_8dp"
        android:layout_marginRight="@dimen/dimens_8dp"
        android:layout_marginBottom="@dimen/dimens_8dp"
        app:separatorWidthHeadBody="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <com.example.gorinih.klibscroll.ScrollableList
        android:id="@+id/createScrollableListSecond"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimens_8dp"
        android:layout_marginLeft="@dimen/dimens_8dp"
        android:layout_marginTop="@dimen/dimens_8dp"
        android:layout_marginEnd="@dimen/dimens_8dp"
        android:layout_marginBottom="@dimen/dimens_8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scrollableList"
        />

</androidx.constraintlayout.widget.ConstraintLayout>